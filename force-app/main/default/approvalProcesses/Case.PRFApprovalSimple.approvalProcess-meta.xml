<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>RecordType</field>
        <field>CaseNumber</field>
        <field>GroupBatchNumber__c</field>
        <field>Status_Overall_Treatment__c</field>
        <field>PRFSubmittedDate__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>SetApprovalDateTime</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>ApproverQueuePRF</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>PRF Approval</label>
        <name>PRF_Approval</name>
    </approvalStep>
    <description>simple PRF Approval Process with 1 step and Queue Approval</description>
    <emailTemplate>unfiled$public/Approval_PRF_Simple</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Case.PRF_Status__c</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.RecordType</field>
            <operation>equals</operation>
            <value>Treatment</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>PRF_Update_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SetApprovalDateTime</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>PRFUpdateRejected</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SetApprovalRejectedDateTime</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>PRF_Update_Submitted</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>SetApprovalSubmittedDateTime</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>PRF Approval (simple)</label>
    <recallActions>
        <action>
            <name>PRF_Update_Draft</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>RemoveApprovalDateTime</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
